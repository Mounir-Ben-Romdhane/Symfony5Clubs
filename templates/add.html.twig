{% extends "base.html.twig" %}

{% block title  %}Add Club{% endblock %}
{% block body %}
<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('club_list_show')}}">Symfony Clubs</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{path('club_list_show')}}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('add_list_show')}}">Add club</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_profile') }}">
                                    {{ app.user.userIdentifier }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_login')}}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_register')}}">Register</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            </nav>
            <div class="container">
                    <div class="row my-5">
                        <div class="col-md-8 mx-auto">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Add Club
                                    </h3>
                                </div>
                                <div class="card-body">
                                    {{ form(club) }}
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </body>
{% endblock %}        
